extends base

block content
    form(method="POST")
        if errorMsg
            div.error-msg=errorMsg
        label(for="email") 이메일
        input(name="email", id="email",placeholder="예시: example@naver.com", type="email", required)
        label(for="password") 비밀번호
        input(name="password", id="password",placeholder="4자리 이상 입력", type="password", required, minLength="4", autocomplete="new-password")
        label(for="password2") 비밀번호 확인
        input(name="password2", id="password2",placeholder="비밀번호 한번 더 입력", type="password", required, minLength="4", autocomplete="new-password")
        span.pw-confirm-msg
        label(for="nickname") 닉네임
        input(name="nickname", id="nickname", placeholder="15자 이내 입력" type="text", required, maxLength="15")
        input(type="submit", value="가입하기")
        div.auth-switch
            span 이미 회원이신가요?
            a(href="/login") 로그인

block scripts
    script(src="/static/js/join.js")

        